
<h2>Cliente</h2>
<%= render @cliente %>
<%= link_to "Editar cliente", edit_cliente_path(@cliente), class: "btn btn-primary shadow" %>
<br>
<br>
<h2>Sucursales</h2>
<table id="myTable" class="table table-responsive table-bordered table-sm table-hover shadow" cellspacing="0" width="100%">
  <thead>
    <tr>

      <th>Nombre</th>
      <th>Direcci√≥n</th>
      <th>Contacto</th>
      <th>Supervisor</th>
      <th>Ingresado</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @cliente.sucursale.each do |sucursale| %>
      <tr>

        <td><%= sucursale.nombre %></td>
        <td><%= sucursale.direccion %></td>
        <td><%= sucursale.contacto %></td>
         <td><%= sucursale.supervisor %></td>
        <td><%= sucursale.created_at.strftime("%Y/%m/%d") %></td>
        <td class="text-center">
          <%= link_to "", new_equipo_path(sucursale_id: sucursale.id), class: "btn btn-sm btn-primary command-delete shadow p-1 rounded bi bi-folder-plus" %>


          <%#= link_to "", sucursale_path(sucursale), data: {turbo_method: :delete, turbo_confirm: "Esta seguro?"}, class: 'btn btn-sm btn-danger command-edit shadow p-1 rounded bi-trash'%>
          <%= link_to "", edit_sucursale_path(sucursale), class: "btn btn-sm btn-secondary command-delete shadow p-1 rounded bi bi-pencil-square" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to "Agregar sucursal", new_cliente_sucursale_path(@cliente), class: "btn btn-primary shadow" %>
<%= link_to "Volver a clientes", clientes_path, class: "btn btn-secondary shadow" %>
<%= link_to 'Descargar sucursales', sucursale_path(format: :xlsx), target: :_blank, class: "btn btn-secondary shadow" %>

