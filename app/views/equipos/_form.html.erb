


<%= simple_form_for(@equipo) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%#= f.association :sucursale, label_method: :nombre, input_html: { value: params[:sucursale] } %>
    <%#= f.association :sucursale, label_method: :id, value_method: :id, input_html: { value: params[:sucursale_id] } %>
