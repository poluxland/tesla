<h1>Nueva sucursal</h1>

<%#= render "form", sucursale: @sucursale %>

<%= simple_form_for([@cliente, @sucursale]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :nombre, label: 'Sucursal' %>
    <%= f.input :direccion %>
    <%= f.input :contacto %>


  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, "Crear sucursal" , class: "btn btn-primary shadow" %>
  </div>
<% end %>

<br>

<div>
  <%#= link_to "Atras", sucursales_path, class: "btn btn-secondary shadow" %>
</div>
